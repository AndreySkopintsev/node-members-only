extends layout

block content

    if user
        h1= title

        p Welcome back, #{user.fullName}!

        a(href=`/membersOnly/newMessage/${user.id}`) Create new message

        each message in messages
            div.messageBox
                h4 #{message.title}
                p #{message.text}
                p Author: #{message.user.fullName}
                p Date: #{message.date}

    else
        h1= title

        p Welcome to our site, please log in or sign up

        each message in messages
            div.messageBox
                h4 #{message.title}
                p #{message.text}
    
